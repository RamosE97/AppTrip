<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/label"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:id="@+id/lblTitulo"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tus datos"
        android:gravity="center"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/users"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/txtNombre"
        android:hint="Escriba su nombre de usuario"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/email"
        android:layout_marginRight="85dp"
        android:layout_marginLeft="85dp"
        app:met_floatingLabel="highlight"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/txtEmail"
        android:hint="Escriba su correo electrónico"/>

    <android.support.design.widget.TextInputLayout
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/TextLabel"
        app:passwordToggleEnabled="true">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_gravity="center"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/lock"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtClave"
        android:hint="Escriba su contraseña"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/TextLabel"
        app:passwordToggleEnabled="true">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_gravity="center"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/lock"
            android:inputType="textPassword"
            app:met_floatingLabel="highlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtConfirmarClave"
            android:hint="Confirmar contraseña"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:id="@+id/btnIngresar"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:text="Registrarse" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/lblAccount"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:text="¿Ya tienes una cuenta?"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/lblIniciar"
            android:textColor="@color/colorPrimary"
            android:layout_height="30dp"
            android:text="Inicia sesión" />
    </LinearLayout>
    <TextView
        android:id="@+id/lblMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E74C3C"
        android:layout_gravity="center"/>
</LinearLayout>
    </ScrollView>
